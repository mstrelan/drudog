{
    "name": "mstrelan/drudog",
    "description": "Drupal meets PunkAPI",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://github.com/mstrelan/drudog",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal/console": "^1.0.2",
        "drupal/core-composer-scaffold": "^8.8",
        "drupal/core-recommended": "^8.8",
        "drupal/migrate_plus": "4.x-dev",
        "drupal/migrate_tools": "^4.5",
        "drupal/paragraphs": "^1.11",
        "drupal/physical": "^1.1",
        "flow/jsonpath": "^0.5.0",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "consolidation/robo": "^2.0",
        "dmore/chrome-mink-driver": "^2.7",
        "drupal/coder": "^8.2",
        "drupal/core-dev": "^8.8.0",
        "drush/drush": "^10.2",
        "weitzman/drupal-test-traits": "^1.3"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
        },
        "enable-patches": true,
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drupal/migrate_plus": {
                "Add XPath-style filtering ability in JSON data parser plugin": "https://www.drupal.org/files/issues/2020-04-01/migrate_plus-json-xpath-filtering-3007709-18.patch"
            }
        }
    }
}
